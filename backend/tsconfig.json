{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node", 
    "types": ["node", "express", "multer", "jsonwebtoken", "mongoose", "bcryptjs"]
  },
  "include": ["src/**/*", "src/types/**/*", "testEmail.ts"],
  "exclude": ["node_modules", "dist"]
}
